<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:ads="http://schemas.android.com/apk/libs/com.google.ads"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="100">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"

            android:layout_weight="60"
            android:contentDescription="@string/desc_img"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/buttonNewProject"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/circle_button"
            android:text="@string/button_new_project" />

        <Button
            android:id="@+id/buttonOpenProject"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/circle_button"
            android:text="@string/button_open_project" />

        <Button
            android:id="@+id/buttonManageProjects"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/circle_button"
            android:text="@string/button_manage" />


        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewMain"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-5186513771147829/9346873101"
            android:layout_weight="10"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>