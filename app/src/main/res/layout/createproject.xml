<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewNatifCreateProject"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            app:adSize="FLUID"
            app:adUnitId="ca-app-pub-5186513771147829/6183192130" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="35" />

        <Button
            android:id="@+id/button_next_create_project"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/circle_button"
            android:text="@string/button_next" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewBannerCreateProject"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-5186513771147829/1198265244" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>